<%- include('./partial/header', {nav:nav}) %>
<h2>About</h2>
<dl>
  <img class="profile-image" src="<%= picture %>" />
  <dt>Name</dt>
  <dd><%= name %></dd>
  <dt>Country</dt>
  <dd><%= country %></dd>
  <dt>Gender</dt>
  <% if(gender === 'male'){ %>
  <dd class="red"><%= gender %></dd>
  <% } else { %>
  <dd><%= gender %></dd>
  <% } %>
  <dt>Favorites Courses</dt>
  <dd>
    <ul>
      <% courses.forEach(function(course){ %>
      <li><%= course %></li>
      <% }); %>
    </ul>
  </dd>
</dl>
<%- include('./partial/footer') %>
